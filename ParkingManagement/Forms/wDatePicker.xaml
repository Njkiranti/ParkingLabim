<Window x:Class="ParkingManagement.Forms.wDatePicker"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkingManagement.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Day Summary" Height="120" Width="250">
    <Border Style="{StaticResource GradientBackground}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Label FontWeight="SemiBold" Width="100" Content="Choose Date"/>
            <DatePicker Style="{x:Null}" VerticalAlignment="Center" Grid.Column="1" x:Name="dpDate"/>
            <Button Grid.Row="1" Grid.Column="1" Style="{StaticResource NewButton}" Content="Print" Width="60" Height="30" Click="Button_Click" HorizontalAlignment="Right"/>
        </Grid>
    </Border>
</Window>
