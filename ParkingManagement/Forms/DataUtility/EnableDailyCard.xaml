<Window x:Class="ParkingManagement.Forms.DataUtility.EnableDailyCard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParkingManagement.Forms.DataUtility"
        mc:Ignorable="d"
        Title="EnableDailyCard" Height="200" Width="450">
    <Border BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" BorderThickness="2">
        <StackPanel Orientation="Horizontal" FocusManager.FocusedElement="{Binding ElementName=CardNumber}">
            
            <TextBlock Text="Card NUmber" Margin="5 0 5 0"  VerticalAlignment="Center" FontWeight="SemiBold"/>
            <TextBox Grid.Column="1" x:Name="CardNumber" Text="{Binding CardNumber,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Width="200" Height="28">
                <TextBox.InputBindings>
                    <KeyBinding Command="{Binding EnableCardCommand}" Key="Return" />
                    <KeyBinding Command="{Binding EnableCardCommand}" Key="Enter" />
                </TextBox.InputBindings>
            </TextBox>
            <Button Grid.Column="2" x:Name="BtnEnableCard" Content="Enable" Command="{Binding EnableCardCommand}" Height="28" Margin="5 0 5 0" Width="100"/>

        </StackPanel>
    </Border>
</Window>
